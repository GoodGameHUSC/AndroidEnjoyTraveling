<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DestinationDetail">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whiteBackground"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageView
            android:id="@+id/des_detail_image"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="1dp"
            tools:srcCompat="@tools:sample/avatars" />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/des_detail_image"
            app:layout_constraintVertical_bias="0.0">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="500dp">

                <ImageButton
                    android:id="@+id/imageButton6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="275dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/background_transparent"
                    android:scaleType="centerCrop"
                    android:tint="#FFEB3B"
                    app:srcCompat="@drawable/ic_action_star" />

                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="345dp"
                    android:layout_marginTop="19dp"
                    android:background="@drawable/background_transparent"
                    android:scaleType="centerCrop"
                    android:tint="#FFEB3B"
                    app:srcCompat="@drawable/ic_action_star" />

                <TextView
                    android:id="@+id/des_detail_address"
                    android:layout_width="323dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="86dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/app_name"
                    android:textColor="@color/textMainColor"
                    android:textSize="14sp"
                    android:textStyle="bold|italic"
                    tools:text="addresss" />

                <TextView
                    android:id="@+id/des_detail_name"
                    android:layout_width="248dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="16dp"
                    android:text="des name"
                    android:textColor="@color/textMainColor"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="324dp"
                    android:layout_marginTop="19dp"
                    android:background="@drawable/background_transparent"
                    android:scaleType="centerCrop"
                    android:tint="#FFEB3B"
                    app:srcCompat="@drawable/ic_action_star" />

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="300dp"
                    android:layout_marginTop="19dp"
                    android:background="@drawable/background_transparent"
                    android:scaleType="centerCrop"
                    android:tint="#FFEB3B"
                    app:srcCompat="@drawable/ic_action_star" />


                <ScrollView
                    android:layout_width="349dp"
                    android:layout_height="256dp"
                    android:layout_below="@+id/des_detail_address"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="21dp"
                    android:layout_marginEnd="21dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView

                            android:id="@+id/des_detail_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TextView" />
                    </LinearLayout>
                </ScrollView>

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="29dp"
                    android:layout_height="33dp"
                    android:layout_below="@+id/imageButton7"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_transparent"
                    android:backgroundTint="#E91E63"
                    android:scaleType="fitCenter"
                    android:tint="#673AB7"
                    app:srcCompat="@drawable/ic_action_photo_size_select_actual"
                    tools:layout_editor_absoluteX="49dp"
                    tools:layout_editor_absoluteY="580dp" />

                <ImageButton
                    android:id="@+id/imageButton7"
                    android:layout_width="29dp"
                    android:layout_height="33dp"
                    android:layout_below="@+id/imageButton2"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/background_transparent"
                    android:backgroundTint="#E91E63"
                    android:scaleType="fitCenter"
                    android:tint="#673AB7"
                    app:srcCompat="@mipmap/ic_action_thumb_up"
                    tools:layout_editor_absoluteX="49dp"
                    tools:layout_editor_absoluteY="580dp" />

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="29dp"
                    android:layout_height="33dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="383dp"
                    android:background="@drawable/background_transparent"
                    android:backgroundTint="#673AB7"
                    android:scaleType="fitCenter"
                    android:tint="#673AB7"
                    app:srcCompat="@drawable/ic_action_map"
                    tools:layout_editor_absoluteX="49dp"
                    tools:layout_editor_absoluteY="580dp" />

                <TextView
                    android:id="@+id/des_view_photo"
                    android:layout_width="296dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gotoGoogleMap"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="57dp"
                    android:layout_marginTop="65dp"
                    android:text="View Photo"
                    android:textColor="#673AB7"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/des_detail_like_count2"
                    android:layout_width="296dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gotoGoogleMap"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="59dp"
                    android:layout_marginTop="26dp"
                    android:text="Liked by 20 people"
                    android:textColor="#9C27B0"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/gotoGoogleMap"
                    android:layout_width="296dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="390dp"
                    android:text="View on Google Map"
                    android:textColor="#673AB7"
                    android:textSize="14sp"
                    android:textStyle="bold" />

