<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DestinationDetail">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whiteBackground"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageView
            android:id="@+id/des_detail_image"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="1dp"
            tools:srcCompat="@tools:sample/avatars" />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/des_detail_image"
            app:layout_constraintVertical_bias="1.0">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="500dp">

                <ImageButton
                    android:id="@+id/item_des_lbtn_like3"
                    android:layout_width="29dp"
                    android:layout_height="28dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="28dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="16dp"
                    android:layout_toStartOf="@+id/item_des_lbtn_like6"
                    android:background="@drawable/background_transparent"
                    android:tint="#FFEB3B"
                    tools:src="@drawable/ic_action_star" />

                <ImageButton
                    android:id="@+id/item_des_lbtn_like6"
                    android:layout_width="29dp"
                    android:layout_height="28dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="28dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="16dp"
                    android:layout_toStartOf="@+id/item_des_lbtn_like5"
                    android:background="@drawable/background_transparent"
                    android:tint="#FFEB3B"
                    tools:src="@drawable/ic_action_star" />

                <ImageButton
                    android:id="@+id/item_des_lbtn_like5"
                    android:layout_width="29dp"
                    android:layout_height="28dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="28dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="16dp"
                    android:layout_toStartOf="@+id/item_des_lbtn_like4"
                    android:background="@drawable/background_transparent"
                    android:tint="#FFEB3B"
                    tools:src="@drawable/ic_action_star" />

                <ImageButton
                    android:id="@+id/item_des_lbtn_like4"
                    android:layout_width="29dp"
                    android:layout_height="28dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="29dp"
                    android:layout_marginEnd="23dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/background_transparent"
                    android:tint="#FFEB3B"
                    tools:src="@drawable/ic_action_star" />

                <ImageButton
                    android:id="@+id/des_detail_location"
                    android:layout_width="29dp"
                    android:layout_height="28dp"
                    android:layout_below="@+id/des_detail_province"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="21dp"
                    android:layout_marginTop="21dp"
                    android:layout_marginBottom="52dp"
                    android:background="@drawable/background_transparent"
                    android:scaleType="fitCenter"
                    tools:src="@drawable/ic_action_location_on" />

                <TextView
                    android:id="@+id/des_detail_province"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/des_detail_name"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/app_name"
                    android:textColor="@color/textMainColor"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    tools:text="province" />

                <TextView
                    android:id="@+id/des_detail_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/des_detail_province"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="16dp"
                    android:layout_toEndOf="@+id/des_detail_location"
                    android:text="@string/app_name"
                    android:textColor="@color/textMainColor"
                    android:textSize="14sp"
                    tools:text="province" />

                <TextView
                    android:id="@+id/des_detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginEnd="16dp"
                    android:text="des name"
                    android:textColor="@color/textMainColor"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/des_detail_description"
                    android:layout_width="355dp"
                    android:layout_height="172dp"
                    android:layout_below="@+id/des_detail_address"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="35dp"
                    android:maxLines="7"
                    android:scrollbars="vertical"
                    android:text="TextView"
                    android:textColor="@color/textMainColor" />
            </RelativeLayout>
        </ScrollView>


    </android.support.constraint.ConstraintLayout>



</android.support.constraint.ConstraintLayout>