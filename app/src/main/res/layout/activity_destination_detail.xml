<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DestinationDetail">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whiteBackground"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">


        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/des_detail_image"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:scaleType="centerCrop"
                        tools:srcCompat="@tools:sample/avatars" />

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="277dp"
                        tools:layout_editor_absoluteX="8dp"
                        tools:layout_editor_absoluteY="337dp">


                        <TextView
                            android:id="@+id/gotoGoogleMap2"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"

                            android:text="@string/menu_share"
                            android:textColor="#9D95AA"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/open_time"
                            app:layout_constraintEnd_toEndOf="@+id/des_detail_btn_share"
                            app:layout_constraintStart_toStartOf="@+id/des_detail_btn_share" />

                        <TextView
                            android:id="@+id/gotoGoogleMap5"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"

                            android:text="3.88 stars"
                            android:textColor="#9D95AA"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/gotoGoogleMap2"
                            app:layout_constraintEnd_toEndOf="@+id/des_detail_rate_btn"
                            app:layout_constraintStart_toStartOf="@+id/des_detail_rate_btn" />

                        <ImageButton
                            android:id="@+id/des_detail_like_button"
                            android:layout_width="29dp"
                            android:layout_height="33dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/background_transparent"
                            android:backgroundTint="#673AB7"
                            android:scaleType="fitCenter"
                            android:tint="#C41250"
                            app:layout_constraintBottom_toBottomOf="@+id/gotoGoogleMap"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:srcCompat="@mipmap/ic_action_thumb_up" />

                        <TextView
                            android:id="@+id/des_detail_like_count2"
                            android:layout_width="wrap_content"
                            android:layout_height="17dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:text="11 Liked"
                            android:textColor="#9D95AA"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/textView3"
                            app:layout_constraintEnd_toEndOf="@+id/des_detail_like_button"
                            app:layout_constraintHorizontal_bias="0.523"
                            app:layout_constraintStart_toStartOf="@+id/des_detail_like_button" />

                        <TextView
                            android:id="@+id/gotoGoogleMap3"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:text="View Photos"
                            android:textColor="#9D95AA"
                            android:textSize="13sp"

                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/des_detail_like_count2"
                            app:layout_constraintEnd_toEndOf="@+id/des_view_photo"
                            app:layout_constraintHorizontal_bias="0.4"
                            app:layout_constraintStart_toStartOf="@+id/des_view_photo" />

                        <ImageButton
                            android:id="@+id/des_view_photo"
                            android:layout_width="29dp"
                            android:layout_height="33dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginEnd="68dp"
                            android:background="@drawable/background_transparent"
                            android:backgroundTint="#673AB7"
                            android:scaleType="fitCenter"
                            android:tint="#2196F3"
                            app:layout_constraintBottom_toBottomOf="@+id/des_detail_like_button"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:srcCompat="@drawable/ic_action_photo_size_select_actual" />

                        <ImageButton
                            android:id="@+id/imageButton"
                            android:layout_width="29dp"
                            android:layout_height="33dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="60dp"
                            android:layout_marginTop="132dp"
                            android:background="@drawable/background_transparent"
                            android:backgroundTint="#673AB7"
                            android:scaleType="fitCenter"
                            android:tint="#3F51B5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_action_alarm" />


                        <ImageButton
                            android:id="@+id/des_detail_btn_share"
                            android:layout_width="29dp"
                            android:layout_height="33dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/background_transparent"
                            android:backgroundTint="#673AB7"
                            android:scaleType="fitCenter"
                            android:tint="#3F51B5"
                            app:layout_constraintBottom_toBottomOf="@+id/imageButton"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:srcCompat="@drawable/ic_action_share" />

                        <ImageButton
                            android:id="@+id/des_detail_rate_btn"
                            android:layout_width="29dp"
                            android:layout_height="33dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginEnd="68dp"
                            android:background="@drawable/background_transparent"
                            android:backgroundTint="#673AB7"
                            android:scaleType="fitCenter"
                            android:tint="#FFC107"
                            app:layout_constraintBottom_toBottomOf="@+id/des_detail_btn_share"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:srcCompat="@drawable/ic_action_star" />

                        <ImageButton
                            android:id="@+id/gotoGoogleMap"
                            android:layout_width="29dp"
                            android:layout_height="33dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="60dp"
                            android:layout_marginTop="200dp"
                            android:background="@drawable/background_transparent"
                            android:backgroundTint="#673AB7"
                            android:scaleType="fitCenter"
                            android:tint="#FF9800"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_action_map" />

                        <TextView
                            android:id="@+id/open_time"
                            android:layout_width="wrap_content"
                            android:layout_height="19dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="8dp"
                            android:text="7.30 AM"
                            android:textColor="#9D95AA"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="@+id/imageButton"
                            app:layout_constraintHorizontal_bias="0.45"
                            app:layout_constraintStart_toStartOf="@+id/imageButton"
                            app:layout_constraintTop_toBottomOf="@+id/imageButton" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="19dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="28dp"
                            android:layout_marginTop="8dp"
                            android:text="Direct on map"
                            android:textColor="#9D95AA"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="@+id/gotoGoogleMap"
                            app:layout_constraintHorizontal_bias="0.661"
                            app:layout_constraintStart_toStartOf="@+id/gotoGoogleMap"
                            app:layout_constraintTop_toBottomOf="@+id/gotoGoogleMap" />

                        <TextView
                            android:id="@+id/des_detail_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="28dp"
                            android:layout_marginTop="72dp"
                            android:text="@string/app_name"
                            android:textColor="@color/textMainColor"
                            android:textSize="14sp"
                            android:textStyle="bold|italic"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="addresss" />

                        <TextView
                            android:id="@+id/des_detail_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="28dp"
                            android:layout_marginTop="32dp"
                            android:text="destination name"
                            android:textColor="@color/textMainColor"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <LinearLayout

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="16dp"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageButton
                                android:layout_width="25dp"
                                android:layout_height="wrap_content"

                                android:background="@drawable/background_transparent"
                                android:scaleType="centerCrop"
                                android:tint="#FFEB3B"
                                app:srcCompat="@drawable/ic_action_star" />

                            <ImageButton
                                android:layout_width="25dp"
                                android:layout_height="wrap_content"

                                android:background="@drawable/background_transparent"
                                android:scaleType="centerCrop"
                                android:tint="#FFEB3B"
                                app:srcCompat="@drawable/ic_action_star" />

                            <ImageButton
                                android:layout_width="25dp"
                                android:layout_height="wrap_content"

                                android:background="@drawable/background_transparent"
                                android:scaleType="centerCrop"
                                android:tint="#FFEB3B"
                                app:srcCompat="@drawable/ic_action_star" />

                            <ImageButton
                                android:layout_width="25dp"
                                android:layout_height="wrap_content"

                                android:background="@drawable/background_transparent"
                                android:scaleType="centerCrop"
                                android:tint="#FFEB3B"
                                app:srcCompat="@drawable/ic_action_star" />

                        </LinearLayout>

                    </android.support.constraint.ConstraintLayout>

                    <TextView

                        android:id="@+id/des_detail_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="25dp"
                        android:text="TextView" />

                </LinearLayout>
            </ScrollView>

            <android.support.v7.widget.CardView
                android:layout_gravity="center|bottom"
                android:layout_width="match_parent"
                android:layout_height="207dp"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rate " />
            </android.support.v7.widget.CardView>
        </FrameLayout>
    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>