<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_transparent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/dialog_gallery_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/background_transparent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/empty" />

    <TextView
        android:id="@+id/dialog_gallery_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:text="Title"
        android:textColor="@color/textMainColor"
        android:textSize="14dp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_transparent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/dialog_gallery_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_action_skip_previous" />

        <ImageButton
            android:id="@+id/dialog_gallery_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_action_skip_next" />
    </LinearLayout>
</LinearLayout>